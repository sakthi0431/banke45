pipeline {
    agent any  // Run the pipeline on any available agent

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sakthi0431/banke23.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                sh './gradlew build' // Change this depending on your build tool
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh './gradlew test'  // Adjust as per your project
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Add deployment steps here, such as copying files or running a script
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
